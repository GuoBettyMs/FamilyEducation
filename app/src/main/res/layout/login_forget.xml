<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.LoginForgetActivity"
    android:orientation="vertical"
    android:padding="5dp"
    android:focusable="true">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="130dp"
        android:text="重设密码"
        android:textColor="@color/text_login"
        android:textSize="25sp"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_password_first"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:gravity="center"
            android:background="@color/text_login"
            android:text=" 输入新密码 "
            android:textColor="@color/black"
            android:textSize="17sp" />
        <EditText
            android:id="@+id/et_password_first"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:inputType="textPassword"
            android:textAlignment="center"
            android:background="@color/white"
            android:maxLength="16"
            android:maxLines="1"
            android:hint="请输入新密码"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_password_second"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:gravity="center"
            android:background="@color/text_login"
            android:text=" 确认新密码 "
            android:textColor="@color/black"
            android:textSize="17sp" />
        <EditText
            android:id="@+id/et_password_second"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:inputType="textPassword"
            android:textAlignment="center"
            android:background="@color/white"
            android:maxLength="16"
            android:maxLines="1"
            android:hint="请再次输入新密码"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_verifycode"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="@color/text_login"
            android:text=" 验证码 "
            android:textColor="@color/black"
            android:textSize="17sp" />
        <EditText
            android:id="@+id/et_verifycode"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:inputType="textPassword"
            android:textAlignment="center"
            android:background="@color/white"
            android:maxLength="6"
            android:maxLines="1"
            android:hint="请输入验证码"
            android:textSize="16sp"/>
        <Button
            android:id="@+id/btn_verifycode"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:background="@color/text_login"
            android:text="获取验证码"
            android:textColor="@color/white"
            android:textSize="17sp"/>
    </LinearLayout>
    <Button
        android:id="@+id/btn_confirm"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:background="@color/text_login"
        android:text="确定"
        android:textColor="@color/black"
        android:textSize="18sp" />
</LinearLayout>